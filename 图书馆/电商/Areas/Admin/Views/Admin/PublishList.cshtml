
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<电商.Areas.Admin.Models.publish> list = ViewBag.list;
    string search = ViewBag.search;
}

<section class="wrapper">
    <h3>
        <i class="fa fa-angle-right"></i>
        <a href="/admin/admin/publishlist">出版社列表</a>
    </h3>
    <!-- BASIC FORM ELELEMNTS -->
    <div class="row mt">
        <div class="col-lg-12">

            <div style="position:relative">
                <form action="/admin/admin/publishlist" method="post">
                    <input type="text" name="search" value="@search" /> <input type="submit" value="查找" class="btn btn-primary" />
                </form>
                <div class="row">

                    <div class="col-md-12">
                        <div class="content-panel">
                            <h4><i class="fa fa-angle-right"></i>出版社列表</h4>
                            <hr>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>出版社编号</th>
                                        <th>出版社名字</th>
                                        <th>出版社号码</th>
                                        <th>出版社地址</th>
                                        <th>出版社邮编</th>
                                        <th>操作</th>

                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (电商.Areas.Admin.Models.publish item in list)
                                    {
                                        <tr>
                                            <td>@item.id</td>
                                            <td>@item.name</td>
                                            <td>@item.phone</td>
                                            <td>@item.location</td>
                                            <td>@item.email</td>
                                            <td>
                                                <a href="/admin/admin/PublishListEdit?id=@item.id"><i class="fa fa-pencil"></i></a>
                                                <a href="javascript:del(@item.id)" style="padding:30px"><i class="fa fa-trash-o "></i></a>
                                                <a href="/admin/admin/booklist?publishid=@item.id"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></a>
                                            </td>
                                        </tr>
                                    }
                                    

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div><!-- col-lg-12-->
    </div><!-- /row -->

</section><! --/wrapper -->
<script type="text/javascript">
    function del(id) {
        var result = window.confirm("是否删除");
        if (result) {
            location.href = "/admin/admin/publishlistdel?Id=" + id;
        }
    }
</script>
