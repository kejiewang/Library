@{
    ViewBag.Title = "editCategory";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    电商.Areas.Admin.Models.Category product = ViewBag.product;
}
<!DOCTYPE html>

<section class="wrapper">
    <h3>
        <i class="fa fa-angle-right"></i>
        <a href="/admin/admin/listCategory">类别管理</a>/<a href="/admin/admin/editCategory">编辑</a>
    </h3>
    <!-- BASIC FORM ELELEMNTS -->
    <div class="row mt">
        <div class="col-lg-12">
            <div class="form-panel">

                <form class="form-horizontal style-form" action="/admin/admin/editCategorysave" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">类别名字</label>
                        <div class="col-sm-10">
                            <input class="hidden" type="text" value="@product.Id" name="id"/>
                            <input class="form-control" type="text" value="@product.Name" name="ProductName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">产品图片</label>
                        <div class="col-sm-10">
                            <img src="/upload/@product.pic_" style="width:60px;height:60px;" />
                            <input class="form-control" type="file" value="" name="pic">
                        </div>
                    </div>
                    <div>
                        <input type="submit" class="btn btn-primary" value="保存" />
                        <input type="reset" class="btn btn-primary" value="重置" />
                    </div>
                </form>
            </div>
        </div><!-- col-lg-12-->
    </div><!-- /row -->

</section><! --/wrapper -->
