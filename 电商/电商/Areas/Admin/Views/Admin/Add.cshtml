
@{
    ViewBag.Title = "Add";
    List<电商.Areas.Admin.Models.Category> CategoryList = ViewBag.CategoryList;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<section class="wrapper">
    <h3>
        <i class="fa fa-angle-right"></i>
        <a href="/admin/admin/index">商品管理</a>/<a href="/admin/admin/add">增加</a>
    </h3>
    <!-- BASIC FORM ELELEMNTS -->
    <div class="row mt">
        <div class="col-lg-12">
            <div class="form-panel">
               
                <form class="form-horizontal style-form" action="/admin/admin/addsave" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">产品名字</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" value="" name="ProductName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">产品价格</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" name="Price" value="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">产品图片</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="file" value="" name="pic">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">产品库存</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" name="Amount" value="">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">产品类别</label>
                        <div class="col-sm-10">
                            <div>
                                <select class="form-control" name="type">

                                    @foreach(电商.Areas.Admin.Models.Category item in CategoryList)
                                    {
                                        <option value="@item.Id">@item.Name</option> 
                                    }
                                    
                                </select>
                            </div>
                        </div>
                    </div>
                    
                    
                    <div>
                        <input type="submit" class="btn btn-primary" value="保存" />
                    </div>
                </form>
            </div>
        </div><!-- col-lg-12-->
    </div><!-- /row -->

</section><! --/wrapper -->
