@{
    ViewBag.Title = "Edit";
    电商.Areas.Admin.Models.Product product = ViewBag.product;
    List<电商.Areas.Admin.Models.Category> CategoryList = ViewBag.CategoryList;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<section class="wrapper">
    <h3>
        <i class="fa fa-angle-right"></i>
        <a href="/admin/admin/index">商品管理</a>/<a href="/admin/admin/edit">编辑</a>
    </h3>
    <!-- BASIC FORM ELELEMNTS -->
    <div class="row mt">
        <div class="col-lg-12">
            <div class="form-panel">

                <form class="form-horizontal style-form" action="/admin/admin/editsave" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">产品名字</label>
                        <input class="hidden" type="text" value="@product.id" name="Id"/>
                         <div class="col-sm-10">
                            <input class="form-control" type="text" value="@product.name" name="ProductName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">产品价格</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" name="Price" value="@product.price">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">产品图片</label>
                        <div class="col-sm-10">
                            <img src="/upload/@product.pic" style="width:60px;height:60px;" />
                            <input class="form-control" type="file" value="" name="pic">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">产品库存</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" name="Amount" value="@product.num">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">产品类别</label>
                        <div class="col-sm-10">
                            <div>
                                <select class="form-control" name="type" >

                                    @foreach (电商.Areas.Admin.Models.Category item in CategoryList)
                                    {
                                        if (item.Id == product.CagegoryId)
                                        {
                                            <option value="@item.Id" selected="selected">@item.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@item.Id" >@item.Name</option>
                                        }
                                    }

                                </select>
                            </div>
                        </div>
                    </div>
                    <div>
                        <input type="submit" class="btn btn-primary" value="保存" />
                        <input type="reset" class="btn btn-primary" value="重置" />
                    </div>
                </form>
            </div>
        </div><!-- col-lg-12-->
    </div><!-- /row -->

</section><! --/wrapper -->
