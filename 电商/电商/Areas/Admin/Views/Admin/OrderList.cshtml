@{
    ViewBag.Title = "Orderlist";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<电商.Areas.Admin.Models.Order> list = ViewBag.list;
    string search = ViewBag.search;

}
<section class="wrapper">
    <h3>
        <i class="fa fa-angle-right"></i>
        <a href="/admin/admin/list">用户管理</a>
    </h3>
    <!-- BASIC FORM ELELEMNTS -->
    <div class="row mt">
        <div class="col-lg-12">

            <div style="position:relative">
                <form action="/admin/admin/orderlist" method="post">
                    <input type="text" name="search" value="@search" /> <input type="submit" value="查找" class="btn btn-primary" />
                </form>
                <div class="row">

                    <div class="col-md-12">
                        <div class="content-panel">
                            <h4><i class="fa fa-angle-right"></i>订单</h4>
                            <hr>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>订货编号</th>
                                        <th>订货名称</th>
                                        <th>客户名称</th>
                                        <th>数量</th>
                                        <th>是否发货</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (电商.Areas.Admin.Models.Order item in list)
                                    {
                                        <tr>
                                            <td>@item.Id</td>

                                            <td> @item.Product.name</td>
                                            <td>@item.User.name</td>
                                            <td>@item.num</td>
                                            <td><a href="/admin/admin/push?id=@item.Id">发货</a>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div><!-- col-lg-12-->
    </div><!-- /row -->




