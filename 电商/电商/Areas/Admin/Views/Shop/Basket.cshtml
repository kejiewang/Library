@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutShop.cshtml";
    电商.Areas.Admin.Models.Product product = ViewBag.product;
    电商.Areas.Admin.Models.User user = ViewBag.user;
    List<电商.Areas.Admin.Models.Basket> list = ViewBag.list;
}



<div style="max-width:500px; margin:0 auto;">
    <div class="page-header">
        <h1 style="text-align:center">@user.name </h1>
    </div>
    
    
    <div>
        @foreach (电商.Areas.Admin.Models.Basket item in list)
        {
            <div class="media">
                <div class="media-left media-middle">
                    <a href="/admin/shop/product?id=@item.Product.pic">
                        <img class="media-object" src="/upload/@item.Product.pic" data-holder-rendered="true" style="width: 64px; height: 64px;">
                    </a>
                </div>
                <div class="media-body">
                    <h4 class="media-heading">@item.Product.name</h4>
                    <p>￥@item.Product.price</p> 
                    <p>购买数目 @item.num</p>
                    <a href="javascript:del(@item.Id)" style="padding:30px">删除</a>
             
                </div>
            </div>

        }
      
        <button onclick="window.location.href='/admin/shop/submit'">清空购物车</button>
    </div>
</div>

<script type="text/javascript">
    function del(id) {
        var result = window.confirm("是否移除购物车");
        if (result) {
            location.href = "/admin/shop/delbasket?Id=" + id;
        }
    }
</script>

