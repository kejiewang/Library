@{
    Layout = null;
    电商.Areas.Admin.Models.User user = ViewBag.user;
}
<!DOCTYPE html>

<html>
<head>
    <link href="~/bootstrap-3.3.7-dist/css/bootstrap.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/bootstrap-3.3.7-dist/css/bootstrap.css" rel="stylesheet" />
    <style>
        * {
            padding: 0px;
        }
    </style>
</head>
<body>
    <header>
        <div style="background-color:black;margin:0 auto;max-width:500px" class="header">
            <p style="text-align:center;color:white">简易商场</p>
            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">

                        <a class="navbar-brand" href="/admin/shop/index">主页</a>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li><a href="/admin/shop/type">商品类别 <span class="sr-only">(current)</span></a></li>


                        </ul>

                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                @{
                                    if (user == null)
                                    {
                                        <a href="/admin/shop/login">登陆</a>
                                    }
                                    else
                                    {
                                        <a href="#">@user.name</a>
                                    }
                                }
                            </li>
                            <li><a href="/admin/shop/register">注册</a></li>
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>

        </div>
    </header>
    <div style="max-width:500px;margin:0 auto">

        @RenderBody()
    </div>
    <footer>

        <div style="max-width: 500px; margin: 0 auto ">
            <div class="btn-group btn-group-justified btn-navbar " role="group" aria-label="...">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-default" onclick="window.location.href='/admin/shop/index'">主页</button>
                </div>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-default" onclick="window.location.href='/admin/shop/basket'">购物篮</button>
                </div>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-default" onclick="window.location.href='/admin/shop/logout'">退出登陆</button>
                </div>
            </div>
        </div>

    </footer>
</body>
</html>
